@{
    string name = null;
    name = User.Identity?.Name;
}

<nav class="navbar">

    <div class="burger" id="burger">
        <svg width="32" height="32" viewBox="0 0 32 32" xmlns="http://www.w3.org/2000/svg">
            <rect x="4" y="6" width="24" height="3" fill="white"/>
            <rect x="4" y="14.5" width="20" height="3" fill="#808080"/>
            <rect x="4" y="23" width="24" height="3" fill="white"/>
            <path d="M26 16l-5 5V11l5 5z" fill="white"/>
        </svg>
    </div>

    <div class="navbar-container">
        <a href="#home" class="navbar-brand">MyApp</a>
        <ul class="navbar-nav">
            <li class="nav-item dropdown dropdown-right">
                <a id="account-toggle" href="#" class="nav-link dropdown-toggle top-toggle"><i class="fa-regular fa-circle-user"></i><span>@name</span><span class="arrow">&#9660;</span></a>
                <ul class="dropdown-menu">
                    @if (User.Identity is { IsAuthenticated: true })
                    {
                        <li>
                            <a class="dropdown-item" asp-page="/Account/Logout/Index">Logout</a>
                        </li>
                    }
                    else
                    {
                        <li>
                            <a class="dropdown-item" asp-page="/Account/Register/Index">Register</a>
                        </li>
                        <li>
                            <a class="dropdown-item" asp-page="/Account/Login/Index">Login</a>
                        </li>
                    }


                </ul>
            </li>
        </ul>

    </div>

