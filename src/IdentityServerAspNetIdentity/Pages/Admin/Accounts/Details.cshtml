@page "{id}"
@using IdentityServerAspNetIdentity.TagHelpers.Tabs
@model IdentityServerAspNetIdentity.Pages.Admin.Accounts.Details

<tab id="user-details">
    <tab-item heading="Account Information" id="account-information">
        <field-container label="Username" value="@Model.ApplicationUserDetails.UserName" />
        <field-container label="Email" value="@Model.ApplicationUserDetails.Email" />
        <field-container label="Phone Number" value="@(Model.ApplicationUserDetails.PhoneNumberConfirmed ? Model.ApplicationUserDetails.PhoneNumber : "Not confirmed")" />
        <field-container label="Two Factor Enabled" value="@Model.ApplicationUserDetails.TwoFactorEnabled" />
        <field-container label="Lockout Enabled" value="@Model.ApplicationUserDetails.LockoutEnabled" />
        <field-container label="Lockout Ends" value="@(Model.ApplicationUserDetails.LockoutEnd?.ToString("g") ?? "Not applicable")" />
        <field-container label="Access Failed Count" value="@Model.ApplicationUserDetails.AccessFailedCount" />
    </tab-item>

    <tab-item heading="Claims" id="claims">
        @foreach (var claim in Model.ApplicationUserDetails.UserClaims)
        {
            <field-container label="@claim.ClaimType" value="@claim.ClaimValue" />
        }
    </tab-item>
    
    
    <tab-item heading="Roles" id="roles">
        @foreach (var role in Model.ApplicationUserDetails.Roles)
        {
            <field-container label="Role" value="@role" />
        }
    </tab-item>
</tab>
